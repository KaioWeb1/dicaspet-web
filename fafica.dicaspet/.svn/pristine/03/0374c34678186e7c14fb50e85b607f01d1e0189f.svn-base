						<div class="pergunta-txt">
							<h3>
								<h:outputText value="#{mensagemMB.mensagem.msg_titulo}" />
							</h3>
							<p>
								<h:outputText value="#{mensagemMB.mensagem.msg_conteudo}" />
							</p>
						</div>
					</div>

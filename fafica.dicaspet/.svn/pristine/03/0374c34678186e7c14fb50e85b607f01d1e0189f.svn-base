					<div class="resposta">
						<ui:repeat value="#{mensagemMB.listaResposta}" var="m"
							id="listaUltimasMSG">
							<div class="titulo-user-resposta">
							<b><h:outputText value="#{m.msg_id_usu.usu_nome}" /></b>
							</div>
							<div class="data-pergunta">
								<i><h:outputText value="#{m.msg_data_cadastro}">
